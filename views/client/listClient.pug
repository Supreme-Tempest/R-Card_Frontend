<!DOCTYPE html>
html(lang="en")
    include ../tools/head.pug
        link(rel="stylesheet" href="/stylesheets/clients/Clientes-Grid.css")
        title="Clientes"
    body
        include ../tools/navigation.pug
        <!--Div del contenedor-->
        div(class="Div-Contenedor")
            h3(class="titulo-LCliente")= "Listado de Clientes"
            div(class="Div-Cliente")
                table(class="table-css" id="table_client")
                    thead 
                        tr
                            th= "Numero de Tarjeta"
                            th= "Cliente"
                            th= "Opciones"
                    tbody(id="tbody_client") 
                        tr
                            td= "1234 5678 5789"
                            td= "Cristian Mauricio Alfaro Contreras"
                            td
                                button(class = btn-Naranja)= "Editar"
                                button(class = btn-Rojo)= "Deshabilitar"
                div(class="Grid-Btn")
                    a(href="/clients/new" class="btn-agregarCliente")= "Agregar Cliente"
        script(src="../../../javascripts/client/client.js")