<!DOCTYPE html>
html(lang="en")
    title="Nueva Compra"
    body
        include ../tools/navigation.pug
        div(class="container")
            div(class="container p-5")
                h3(class="text-center") Nueva Producto
                form(class="row" role='form' method='POST' action='/clients/clients' name="newPurchase")
                    div(class="col-1")
                    div(class="col-5" )
                        div(class="form-group")
                            label(for="newPurchase") Codigo de producto
                            input(type="text" class="form-control validate-input" id="product-Cod" aria-describedby="duiHelp" placeholder="Ejemplo: 00001")
                        div(class="form-group")
                            label(for="newPurchase") Nombre 
                            input(type="text" class="form-control" id="product-name" placeholder="Ingrese el nombre del producto")
                        div(class="form-group")
                            label(for="newPurchase") Marca
                            input(type="text" class="form-control" id="product-marc" placeholder="Ingrese la marca")
                    div(class="col-5")
                        div(class="form-group")
                            label(for="newPurchase") Distintivo
                            input(type="text" class="form-control" id="product-distintivo" placeholder="Ingrese el nombre del producto")
                        div(class="form-group")
                            label(for="newPurchase") Existencia
                            input(type="text" class="form-control" id="product-existecia" placeholder="Unidades disponibles")
                        div(class="form-group")
                            label(for="newPurchase") Total de compra
                            input(type="text"  inputmode="numeric" class="form-control" id="total-compra" placeholder="$0.00")
                        div(class="form-group row")
                            div(class="col-6")
                            div(class="col-6 btn-toolbar")
                                input.btn.btn-success(type="submit" value="Guardar")  
                                button.btn.btn-danger Cancelar 
                    div(class="col-1")
        <script src="../../../javascripts/purchase/newclient.js"></script>