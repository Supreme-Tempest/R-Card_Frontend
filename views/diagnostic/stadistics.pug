<!DOCTYPE html>
html(lang="en")
    include ../tools/head.pug
        <!--link(rel="stylesheet" href="/stylesheets/global.css")-->
        link(rel="stylesheet" href="/stylesheets/diagnostics/Estadisticas.css")
        title="Estadistica"
        <script src="https://cdn.jsdelivr.net/npm/chart.js@latest/dist/Chart.min.js"></script>
        
    body
        include ../tools/navigation.pug
        <!--Div del contenedor-->
        
        <div class="Div-Contenedor">
            <p class="GraTitulo" >Estadisticas</p>

            <div class="Grid-Clientes">
                <!-- html estadistica Clientes-->
                <div class="grid-it Grid-Clientes-icon">
                    <div class="img-icon">
                        <img class="iconE" src="/images/Cliente.svg" alt="">
                    </div>
                    <div class="p-icon">
                        <p class="PETitulo"> Clientes Totales </p>
                    </div>
                </div>
                <div class="General-Input Grid-Clientes-input">
                    <input id="Graf-Inp-Cliente" class="grid-Imput-css Imput-cssS" type="text" name="inputname" value="$1000.00" disabled>
                </div>
            </div>
            <div class="Grid-Compras">
                <!-- html estadistica Compras-->
                <div class="grid-it Grid-Compras-icon">
                    <div class="img-icon">
                        <img class="iconE" src="/images/Compras.svg" alt="">
                    </div>
                    <div class="p-icon">
                        <p class="PETitulo"> Compras Totales </p>
                    </div>
                </div>
                <div class="General-Input Grid-Compras-input">
                    <input id="Graf-Inp-Compras" class="grid-Imput-css Imput-cssS" type="text" name="inputname" value="$1000.00" disabled>
                </div>
            </div>
            <div class="Grid-Ventas">
                <!-- html estadistica Ventas-->
                <div class="grid-it Grid-Ventas-icon">
                    <div class="img-icon">
                        <img class="iconE" src="/images/Ventas.svg" alt="">
                    </div>
                    <div class="p-icon">
                        <p class="PETitulo"> Ventas Totales</p>
                    </div>
                </div>
                <div class="General-Input Grid-Ventas-input">
                    <input id="Graf-Inp-Ventas" class="grid-Imput-css Imput-cssS" type="text" name="inputname" value="$1000.00" disabled>
                </div>
            </div>
            <div class="Grid-Productos">
                <!-- html estadistica Productos-->
                <div class="grid-it Grid-Producto-icon">
                    <div class="img-icon">
                        <img class="iconE" src="/images/Bolso.svg" alt="">
                    </div>
                    <div class="p-icon">
                        <p class="PETitulo"> Productos Totales</p>
                    </div> 
                </div>
                <div class="General-Input Grid-Producto-input">
                    <input id="Graf-Inp-Productos" class="grid-Imput-css Imput-cssS" type="text" name="inputname" value="$1000.00" disabled>
                </div>
            </div>
            <div class="grid-Top-Mas">
                <!-- html Tabla top mas vendidos -->
                <h3 class="subT" >Top 3 productos Mas Vendidos</h3>
                <table id="Graf-Table-MasVendidos" class="table-css">
                    <tr>
                        <th>N</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                    </tr>
                    <tr>
                        <td class="th-n">1</td>
                        <td class="th-Producto">Camisas</td>
                        <td class="th-Cantidad">500</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Zapatos</td>
                        <td>300</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Vestidos</td>
                        <td>96</td>
                    </tr>
                </table>
            </div>

            <div class="grid-Top-Menos">
                <!-- html Tabla top menos vendidos -->
                <h3 class="subT" >Top 3 productos Menos Vendidos</h3>
                <table id="Graf-Table-MenosVendidos" class="table-css">
                    <tr>
                        <th>N</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                    </tr>
                    <tr>
                        <td class="th-n">1</td>
                        <td  class="th-Producto">Pantalones</td>
                        <td class="th-Cantidad">2</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Collar</td>
                        <td>3</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Anillo</td>
                        <td>6</td>
                    </tr>
                </table>
            </div>

            <div class="Grid-Area-Gafica">
                <!-- html Area Grafica -->
                <div class="Grid-Grafica-Buscador">
                    <div class="C-Filtro-Select">
                    <!--Menu Desplegable-->
                        <select id="Select-FiltroBuscador" name="Filtro" class="Select-css">
                            <option id="Option01-FiltroBuscador">Ventas Por Mes</option>
                            <option id="Option02-FiltroBuscador">Ventas por Anno</option>
                        </select>
                    </div>
                    <div class="btn-filtroC">
                    <button onClick="btnGraficar()" class="btn-General btn-Naranja btn-filtro">Graficar</button>
                    </div>
                </div>
                <!-- Div de la grafica -->
                <div class="grid-Grafica">
                    <canvas id="grafica"></canvas>
                </div>
            </div>
        </div>
        <script src="/javascripts/diagnostics/StadisticGraf.js"></script>
