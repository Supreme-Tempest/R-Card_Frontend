<!DOCTYPE html>
html(lang="en")
    title="Productos"
    
    body
        include ../tools/navigation.pug
        div(class="container-fluid pt-4")
            h3(class="text-center") Estadisticas
            div.row
                div.col-2
                    div.card.p-3.text-center
                        h5.text-center Top 3 productos mas vendidos
                        small.d-flex.justify-content-center
                            table.table-sm.table-striped
                                tr
                                    th N
                                    th Producto
                                    th Cantidad
                                tr
                                    td 1
                                    td Camisas
                                    td 500
                                tr
                                    td 2
                                    td Zapatos
                                    td 300
                                tr
                                    td 3
                                    td Vestidos
                                    td 96
                    div.card.p-3.text-center.mt-3
                        h5.text-center Top 3 productos menos vendidos
                        small.d-flex.justify-content-center
                            table.table-sm.table-striped
                                tr
                                    th N
                                    th Producto
                                    th Cantidad
                                
                                tr
                                    td 1
                                    td Pantalones
                                    td 2
                                
                                tr
                                    td 2
                                    td Collar
                                    td 3
                                
                                tr
                                    td 3
                                    td Anillo
                                    td 6
                div.col-9
                    div.row
                        table.table
                                tr
                                    th Total de clientes: 5
                                    th Total de compras: 10
                                    th Total de ventas: 15
                                    th Total de productos: 20
                                tr
                    div.row.card    
                        <div class="Grid-Area-Gafica">
                            <!-- html Area Grafica -->
                            <div class="Grid-Grafica-Buscador">
                                <div class="C-Filtro-Select">
                                <!--Menu Desplegable-->
                                    <select id="Select-FiltroBuscador" name="Filtro" class="btn btn-secondary">
                                        <option id="Option01-FiltroBuscador">Ventas Por Mes</option>
                                        <option id="Option02-FiltroBuscador">Ventas por Anno</option>
                                    </select>
                                </div>
                                <div class="btn-filtroC">
                                <button onClick="btnGraficar()" class="btn btn-success">Graficar</button>
                                </div>
                            </div>
                            <!-- Div de la grafica -->
                            <div class="grid-Grafica">
                                <canvas id="grafica"></canvas>
                            </div>
                        </div>
                        
    <script src="https://cdn.jsdelivr.net/npm/chart.js@latest/dist/Chart.min.js"></script>
    <script src="/javascripts/diagnostics/StadisticGraf.js"></script>
    img.img-sizing.mx-auto.d-block(src="/images/Bolso.svg" alt="")
